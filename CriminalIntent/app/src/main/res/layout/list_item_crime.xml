<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/crimeListItemSolvedCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:enabled="false"
        android:focusable="false"
        android:gravity="center"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/crimeListItemTitleText"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/crimeListItemSolvedCheckBox"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="Crime Title"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/crimeListItemDateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/crimeListItemTitleText"
        android:layout_toLeftOf="@id/crimeListItemSolvedCheckBox"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="Crime Date"
        android:textStyle="bold"/>


</RelativeLayout>